#!/bin/bash

if [[ "$1" == "l" ]]
then
	cm -c1  ~/Maildir/.* -ob -oo -op -ol1  -os -sduration=6000 -smin-duration=3000 -scolor=orange -m"$0 %s"
elif [[ "$1" == "" ]]
then
	kam -Y -t="/home/jirikalvoda/bin/m $1"
elif [[ "$1" == "h" ]]
then
	kam -Y -t="/home/jirikalvoda/bin/m $1"
else
	file=$1
	file=$(echo ${file:1} | sed 's/[^\/]*\(\/.*\)/\1/')
	file=$(echo ${file:1} | sed 's/[^\/]*\(\/.*\)/\1/')
	file=$HOME/$file
	neomutt -f $file
	offlineimap-run $file
fi
